{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/*.js",
      "node_modules/**/*.ts",
    ]
  },
  "rules": {
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "ordered-imports": false,
    "no-angle-bracket-type-assertion": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "array-type": [true, "generic"]
  }
}
